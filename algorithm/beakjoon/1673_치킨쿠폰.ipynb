   "source": [
    "import sys\n",
    "for line in sys.stdin:\n",
    "    n, k = map(int, line.split())\n",
    "    cnt = 0\n",
    "    while n>=k:\n",
    "        f = n//k\n",
    "        n = n%k\n",
    "        n += f\n",
    "        cnt += f*k\n",
    "    print(cnt+n)"
   ]
  }
